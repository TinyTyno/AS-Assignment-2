@{
    ViewData["Title"] = "Password Reset Requested";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h2 class="mb-4">Password Reset Request Received</h2>
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        If your email is registered, you'll receive a password reset link shortly.
                    </div>
                    <a asp-action="Login" class="btn btn-primary">Return to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>